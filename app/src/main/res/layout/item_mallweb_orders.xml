<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:id="@+id/tvNumOrder"
            android:fontFamily="@font/chakra_petch_regular"
            android:text="@string/n_orden"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:id="@+id/tvDate"
            android:fontFamily="@font/chakra_petch_regular"
            android:text="@string/fecha"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:id="@+id/tvTotal"
            android:fontFamily="@font/chakra_petch_regular"
            android:text="@string/total_"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:id="@+id/tvState"
            android:fontFamily="@font/chakra_petch_regular"
            android:text="@string/estado"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:id="@+id/tvShipping"
            android:fontFamily="@font/chakra_petch_regular"
            android:text="@string/env_o"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/btnSeeAllData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/grayLight"
            app:cardCornerRadius="8dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:id="@+id/tvSeeOrder"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/chakra_petch_semi_bold"
                android:text="@string/ver"
                android:textAllCaps="true"
                android:textColor="@color/white" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnBackToOrder"
            android:layout_width="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/greenLight"
            app:cardCornerRadius="8dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/chakra_petch_semi_bold"
                android:text="@string/retomar"
                android:textAllCaps="true"
                android:textColor="@color/white" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:id="@+id/cvWebView"
        android:visibility="gone"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#FFFFFF">

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </androidx.cardview.widget.CardView>


    <ImageView
        android:layout_width="match_parent"
        android:contentDescription="@string/todo"
        android:layout_height="2dp"
        android:background="@color/gray"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:src="@android:drawable/divider_horizontal_bright" />

</LinearLayout>