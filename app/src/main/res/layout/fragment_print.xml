<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mallweb.fragmentsSubAllCategories.PrintFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tvImpresoras"
            android:layout_marginTop="24dp"
            android:layout_marginStart="32dp"
            android:textAllCaps="false"
            android:textColor="#FF0000"
            android:fontFamily="@font/chakra_petch_regular"
            android:text="@string/impresoras"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/tvImpresoras"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:id="@+id/llprintercategorybottoms"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginStart="32dp"
                android:orientation="horizontal"
                android:layout_marginEnd="32dp"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="25"
                    app:layout_constraintTop_toBottomOf="@+id/tvImpresoras"
                    app:cardBackgroundColor="#FF0000"
                    app:cardElevation="2dp"
                    android:id="@+id/cvMultiFunction"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintStart_toStartOf="@+id/tvImpresoras"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/multifuncion"
                        android:fontFamily="@font/chakra_petch_semi_bold"
                        android:maxWidth="170dp"
                        android:paddingHorizontal="32dp"
                        android:paddingVertical="12dp"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="25"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvImpresoras"
                    app:cardBackgroundColor="#FF0000"
                    app:cardElevation="2dp"
                    android:id="@+id/cvSimpleFunction"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintStart_toStartOf="@+id/tvImpresoras"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:maxWidth="170dp"
                        android:fontFamily="@font/chakra_petch_semi_bold"
                        android:text="@string/simple_funcion"
                        android:paddingHorizontal="32dp"
                        android:paddingVertical="12dp"/>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginStart="32dp"
                android:orientation="horizontal"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="25"
                    app:layout_constraintTop_toBottomOf="@+id/tvImpresoras"
                    app:cardBackgroundColor="#FF0000"
                    app:cardElevation="2dp"
                    android:id="@+id/cvLaser"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintStart_toStartOf="@+id/tvImpresoras"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/laser"
                        android:fontFamily="@font/chakra_petch_semi_bold"
                        android:maxWidth="170dp"
                        android:paddingHorizontal="32dp"
                        android:paddingVertical="12dp"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="25"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvImpresoras"
                    app:cardBackgroundColor="#FF0000"
                    app:cardElevation="2dp"
                    android:id="@+id/cvInjectionInk"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintStart_toStartOf="@+id/tvImpresoras"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:maxWidth="170dp"
                        android:fontFamily="@font/chakra_petch_semi_bold"
                        android:text="@string/inyecci_n_de_tinta"
                        android:paddingHorizontal="32dp"
                        android:paddingVertical="12dp"/>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginStart="32dp"
                android:orientation="horizontal"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="25"
                    app:layout_constraintTop_toBottomOf="@+id/tvImpresoras"
                    app:cardBackgroundColor="#FF0000"
                    app:cardElevation="2dp"
                    android:id="@+id/cvColor"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintStart_toStartOf="@+id/tvImpresoras"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/chakra_petch_semi_bold"
                        android:text="@string/color"
                        android:maxWidth="170dp"
                        android:paddingHorizontal="32dp"
                        android:paddingVertical="12dp"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="25"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvImpresoras"
                    app:cardBackgroundColor="#FF0000"
                    app:cardElevation="2dp"
                    android:id="@+id/cvMonocromatic"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintStart_toStartOf="@+id/tvImpresoras"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:maxWidth="170dp"
                        android:fontFamily="@font/chakra_petch_semi_bold"
                        android:text="@string/monocrom_tica"
                        android:paddingHorizontal="32dp"
                        android:paddingVertical="12dp"/>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_margin="8dp"
            android:id="@+id/rvPrinters"
            app:layout_constraintTop_toBottomOf="@+id/llprintercategorybottoms"
            tools:listitem="@layout/item_mallweb_products_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>




</ScrollView>