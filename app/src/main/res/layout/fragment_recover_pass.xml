<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mallweb.auth.RecoverPassFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/chakra_petch_medium"
        android:textColor="#FF0000"
        android:text="@string/recuperar_contrase_a"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:textAllCaps="false"
        android:fontFamily="@font/chakra_petch_medium"
        android:text="@string/escribe_el_email_asociado_a_tu_cuenta_para_recuperar_tu_contrase_a"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etEmailRecoverPass"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:textAllCaps="false"
        android:fontFamily="@font/chakra_petch_medium"
        android:autofillHints="emailAddress"
        android:inputType="textEmailAddress"
        tools:ignore="LabelFor" />


    <Button
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:backgroundTint="@color/red"
        android:id="@+id/btnRecoverPass"
        android:text="@string/recuperar_contrase_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>