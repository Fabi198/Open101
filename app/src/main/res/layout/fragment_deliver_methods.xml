<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mallweb.fragmentsDrawerMenu.DeliverMethodsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:id="@+id/tvDelMetTitle"
        android:fontFamily="@font/chakra_petch_medium"
        android:textColor="#FF0000"
        android:textAllCaps="true"
        android:text="@string/m_todos_de_entrega"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvDelMetTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:maxWidth="320dp"
            android:id="@+id/tvDelMetSubTitle"
            android:fontFamily="@font/chakra_petch_medium"
            android:text="@string/delMetSubTitle"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/tvDelMet1"
        android:maxWidth="320dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDelMetSubTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"
        android:textAllCaps="false"
        android:fontFamily="@font/chakra_petch_medium"
        android:text="@string/delMet1"/>

    <ImageButton
        android:id="@+id/btnShowAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:background="@null"
        android:src="@drawable/baseline_keyboard_arrow_down_24"
        app:layout_constraintBottom_toBottomOf="@+id/tvDelMet1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvDelMet1"
        tools:ignore="ContentDescription,ImageContrastCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/sepDelMet1"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/grayLight"
        android:contentDescription="@string/todo"
        android:src="@android:drawable/divider_horizontal_bright"
        app:layout_constraintTop_toBottomOf="@+id/tvDelMet1"
        tools:ignore="ImageContrastCheck"
        tools:layout_editor_absoluteX="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:id="@+id/llDelMet1"
        app:layout_constraintTop_toBottomOf="@+id/sepDelMet1"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_gravity="center_vertical"
            android:maxWidth="356dp"
            android:id="@+id/ansDelMet1"
            android:visibility="gone"
            android:fontFamily="@font/chakra_petch_regular"
            android:text="@string/ansDelMet1"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/tvDelMet2"
        android:maxWidth="320dp"
        app:layout_constraintTop_toBottomOf="@+id/llDelMet1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"
        android:textAllCaps="false"
        android:fontFamily="@font/chakra_petch_medium"
        android:text="@string/delMet2"/>

    <ImageButton
        android:id="@+id/btnShowAnswer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:background="@null"
        android:src="@drawable/baseline_keyboard_arrow_down_24"
        app:layout_constraintBottom_toBottomOf="@+id/tvDelMet2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvDelMet2"
        tools:ignore="ContentDescription,ImageContrastCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/sepDelMet2"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/grayLight"
        android:contentDescription="@string/todo"
        android:src="@android:drawable/divider_horizontal_bright"
        app:layout_constraintTop_toBottomOf="@+id/tvDelMet2"
        tools:ignore="ImageContrastCheck"
        tools:layout_editor_absoluteX="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:id="@+id/llDelMet2"
        app:layout_constraintTop_toBottomOf="@+id/sepDelMet2"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_gravity="center_vertical"
            android:maxWidth="356dp"
            android:id="@+id/ansDelMet2"
            android:visibility="gone"
            android:fontFamily="@font/chakra_petch_regular"
            android:text="@string/ansDelMet2"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/tvDelMet3"
        app:layout_constraintTop_toBottomOf="@+id/llDelMet2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"
        android:textAllCaps="false"
        android:maxWidth="320dp"
        android:fontFamily="@font/chakra_petch_medium"
        android:text="@string/delMet3"/>

    <ImageButton
        android:id="@+id/btnShowAnswer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:background="@null"
        android:src="@drawable/baseline_keyboard_arrow_down_24"
        app:layout_constraintBottom_toBottomOf="@+id/tvDelMet3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvDelMet3"
        tools:ignore="ContentDescription,ImageContrastCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/sepDelMet3"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="8dp"
        android:background="@color/grayLight"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/todo"
        android:src="@android:drawable/divider_horizontal_bright"
        app:layout_constraintTop_toBottomOf="@+id/tvDelMet3"
        tools:ignore="ImageContrastCheck"
        tools:layout_editor_absoluteX="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:id="@+id/llDelMet3"
        app:layout_constraintTop_toBottomOf="@+id/sepDelMet3"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_gravity="center_vertical"
            android:maxWidth="356dp"
            android:id="@+id/ansDelMet3"
            android:visibility="gone"
            android:fontFamily="@font/chakra_petch_regular"
            android:text="@string/ansDelMet3"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>