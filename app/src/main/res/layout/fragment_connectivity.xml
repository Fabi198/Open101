<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mallweb.fragmentsSubAllCategories.StorageMenu">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginStart="32dp"
            android:fontFamily="@font/chakra_petch_medium"
            android:textColor="#FF0000"
            android:textAllCaps="true"
            android:text="@string/conectividad"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="32dp"
            android:textAllCaps="true"
            android:fontFamily="@font/chakra_petch_semi_bold"
            android:text="@string/conectividad"/>

        <ImageView
            android:layout_width="match_parent"
            android:contentDescription="@string/todo"
            android:layout_height="2dp"
            android:background="@color/gray"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:src="@android:drawable/divider_horizontal_bright" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="48dp"
            android:textAllCaps="false"
            android:id="@+id/btnPlacasRed"
            android:fontFamily="@font/chakra_petch_medium"
            android:text="@string/placas_de_red"/>

        <ImageView
            android:layout_width="match_parent"
            android:contentDescription="@string/todo"
            android:layout_height="2dp"
            android:background="@color/gray"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:src="@android:drawable/divider_horizontal_bright" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="48dp"
            android:textAllCaps="false"
            android:id="@+id/btnAdaptadoresUSB"
            android:fontFamily="@font/chakra_petch_medium"
            android:text="@string/adaptadores_de_usb"/>

        <ImageView
            android:layout_width="match_parent"
            android:contentDescription="@string/todo"
            android:layout_height="2dp"
            android:background="@color/gray"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:src="@android:drawable/divider_horizontal_bright" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="48dp"
            android:textAllCaps="false"
            android:id="@+id/btnSwitches"
            android:fontFamily="@font/chakra_petch_medium"
            android:text="@string/switches"/>

        <ImageView
            android:layout_width="match_parent"
            android:contentDescription="@string/todo"
            android:layout_height="2dp"
            android:background="@color/gray"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:src="@android:drawable/divider_horizontal_bright" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="48dp"
            android:textAllCaps="false"
            android:id="@+id/btnRouters"
            android:fontFamily="@font/chakra_petch_medium"
            android:text="@string/routers"/>

        <ImageView
            android:layout_width="match_parent"
            android:contentDescription="@string/todo"
            android:layout_height="2dp"
            android:background="@color/gray"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:src="@android:drawable/divider_horizontal_bright" />

    </LinearLayout>

</ScrollView>