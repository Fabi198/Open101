            android:id="@+id/DtoOccupation"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/tvOccupation"
            app:layout_constraintTop_toBottomOf="@+id/tvWork" />

        <TextView
            android:id="@+id/DtoBase"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:layout_marginEnd="20dp"
            app:layout_constraintLeft_toRightOf="@+id/tvBase"
            app:layout_constraintTop_toBottomOf="@+id/DtoOccupation" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintConnections"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintWork">


        <TextView
            android:id="@+id/tvConnections"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
