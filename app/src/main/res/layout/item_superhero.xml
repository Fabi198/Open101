            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/DtoFirstappearance" />


        <TextView
            android:id="@+id/tvAlignment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:text="@string/alignment"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/DtoPublisher" />


        <TextView
            android:id="@+id/DtoFullname"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"
            app:layout_constraintLeft_toRightOf="@+id/tvFullname"
            app:layout_constraintTop_toBottomOf="@+id/tvBiography"/>

        <TextView
            android:id="@+id/DtoAlteregos"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"
            app:layout_constraintLeft_toRightOf="@+id/tvAlteregos"
