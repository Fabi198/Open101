            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/tvEyecolor"
            app:layout_constraintTop_toBottomOf="@+id/DtoWeight" />

        <TextView
            android:id="@+id/DtoHaircolor"
            android:layout_width="wrap_content"
