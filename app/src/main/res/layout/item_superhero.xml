            app:layout_constraintTop_toBottomOf="@+id/DtoRace" />

        <TextView
            android:id="@+id/tvWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:text="@string/weight"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/DtoHeight" />

        <TextView
            android:id="@+id/tvEyecolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:text="@string/eye_color"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/DtoWeight" />

        <TextView
            android:id="@+id/tvHaircolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:text="@string/hair_color"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/DtoEyecolor" />

        <TextView
            android:id="@+id/DtoGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/tvGender"
            app:layout_constraintTop_toBottomOf="@id/tvAppearance"/>

        <TextView
            android:id="@+id/DtoRace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/tvRace"
            app:layout_constraintTop_toBottomOf="@+id/DtoGender" />

        <TextView
            android:id="@+id/DtoHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/tvHeight"
            app:layout_constraintTop_toBottomOf="@+id/DtoRace" />

        <TextView
            android:id="@+id/DtoWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/tvWeight"
            app:layout_constraintTop_toBottomOf="@+id/DtoHeight" />

        <TextView
            android:id="@+id/DtoEyecolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
