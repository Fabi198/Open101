            android:layout_marginEnd="8dp"
            app:layout_constraintLeft_toRightOf="@+id/tvAliases"
            app:layout_constraintTop_toBottomOf="@+id/DtoAlteregos" />

        <TextView
            android:id="@+id/DtoPlaceofbirth"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"
            app:layout_constraintLeft_toRightOf="@+id/tvPlaceofbirth"
            app:layout_constraintTop_toBottomOf="@+id/DtoAliases" />

        <TextView
            android:id="@+id/DtoFirstappearance"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
