<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="match_parent"
        android:text="@string/libro"
        android:layout_margin="12dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:id="@+id/tvNameBookList"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        app:drawableStartCompat="@drawable/baseline_book_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tvAutorList"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:drawablePadding="8dp"
            android:layout_weight="25"
            app:drawableStartCompat="@drawable/baseline_person_violet_24"
            android:layout_height="wrap_content"
            tools:text="Autor" />

        <TextView
            android:id="@+id/tvYearList"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:drawablePadding="8dp"
            android:layout_weight="25"
            app:drawableStartCompat="@drawable/baseline_date_range_24"
            android:layout_height="wrap_content"
            tools:text="Year" />

        <TextView
            android:id="@+id/tvGenderList"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_weight="25"
            android:textSize="16sp"
            android:drawablePadding="8dp"
            app:drawableStartCompat="@drawable/baseline_edit_26"
            android:layout_height="wrap_content"
            tools:text="Gender" />

        <TextView
            android:id="@+id/tvUnitsList"
            android:layout_width="wrap_content"
            android:layout_weight="25"
            android:textStyle="bold"
            android:textSize="16sp"
            android:drawablePadding="8dp"
            app:drawableStartCompat="@drawable/baseline_library_add_check_24"
            android:layout_height="wrap_content"
            tools:text="Units" />

    </LinearLayout>



</LinearLayout>